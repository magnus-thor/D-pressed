- @articles.each do |article|
  .max-w-md.w-full.lg:flex
    .h-48.lg:h-auto.lg:w-48.flex-none.bg-cover.rounded-t.lg:rounded-t-none.lg:rounded-l.text-center.overflow-hidden{:style => "background-image: url('https://tailwindcss.com/img/card-left.jpg')", :title => "Woman holding a mug"}
    .border-r.border-b.border-l.border-grey-light.lg:border-l-0.lg:border-t.lg:border-grey-light.bg-white.rounded-b.lg:rounded-b-none.lg:rounded-r.p-4.flex.flex-col.justify-between.leading-normal
      .mb-8
        = link_to article.title, article_path(article)
        %p.text-sm.text-grey-dark.flex.items-center
          %svg.fill-current.text-grey.w-3.h-3.mr-2{:viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
            %path{:d => "M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z"}
          Members only
        .text-black.font-bold.text-xl.mb-2= article.title
        %p.text-grey-darker.text-base= article.body 
      .flex.items-center
        .text-sm
          %p.text-black.leading-none Published on: 2018-08-19
          %div.text-grey-dark= article.created_at.to_date
  %br/
  - if article.image.attached?
    = image_tag article.image
  %br
  = link_to article.title, article_path(article)
  %p= article.title
  %p= article.body
  %p
    Published on:
